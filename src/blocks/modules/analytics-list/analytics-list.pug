        title: '<h1>Аналитика</h1>',
        cards: [
            {
                title: 'Lixiang L7 Pro 449 л.с. Hybrid Turbo 4WD',
                text: 'Последняя продажа',
                icon: 'img/analytics/card_1.svg',
                size: ''
            },
            {
                title: 'Lixiang',
                text: 'Чаще продаете',
                icon: 'img/analytics/card_2.svg',
                size: ''
            },
            {
                title: '1 136 000 000 ₽',
                text: 'Сумма продаж',
                icon: 'img/analytics/card_3.svg',
                size: 'small'
            },
            {
                title: '36 000 000 ₽',
                text: 'Самая дорогая сделка',
                icon: 'img/analytics/card_4.svg',
