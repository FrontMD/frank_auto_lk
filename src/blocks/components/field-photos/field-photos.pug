-
    const defaultFieldPhotosProps = {
        classes: '',
        title: '',
        placeholder: '',
        id: '',
        inputAttr: ''
    }

mixin field-photos(props = defaultFieldPhotosProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultFieldPhotosProps.classes,
            title: props.title ? props.title : defaultFieldPhotosProps.title,
            placeholder: props.placeholder ? props.placeholder : defaultFieldPhotosProps.placeholder,
            id: props.id ? props.id : defaultFieldPhotosProps.id,
            inputAttr: props.inputAttr ? props.inputAttr : defaultFieldPhotosProps.inputAttr,
        }

    .field-photos(class= checkProps.classes data-js="fieldPhotos")&attributes(attributes)

        .field-photos__item.field-photos__label(data-js="fieldPhotosLabel")
            .field-photos__add.btn.btn--accent.btn--small
                svg
                    use(xlink:href="img/sprites/sprite.svg#photo")
                span.btn__text Загрузить фото
            .field-photos__error(data-js="fieldPhotosError") Загрузите фото в формате .jpeg / .jpg / .png / .webp

